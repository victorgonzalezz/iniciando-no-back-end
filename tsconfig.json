{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
     "outDir": "./dist",
     "rootDir": "./src",
    "strict": true,
    "paths": {
        "@modules/*": ["modules/*"],
        "@config/*": ["congif/*"],
        "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",

  }
}
